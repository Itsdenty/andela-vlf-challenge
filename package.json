{
  "name": "andela-vlf",
  "version": "1.0.0",
  "description": "for the andela vlf challenge",
  "main": "dist",
  "scripts": {
    "build": "NODE_ENV=development rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./public,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start": "npm run build && node dist/index.js",
    "test:dev": "NODE_ENV=test nyc mocha tests/*.test.js --exit --compilers js:babel-register",
    "test": "nyc mocha tests/*.test.js --exit --compilers js:babel-register",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "db-migrate": "babel-node ./database/models/index.js",
    "db-migrate:test": "NODE_ENV=test babel-node ./database/models/index.js",
    "db-seed": "babel-node ./database/seeders/index.js",
    "db-seed:test": "NODE_ENV=test babel-node ./database/seeders/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Itsdenty/andela-vlf-challenge.git"
  },
  "keywords": [
    "andela",
    "stackoverflow-clone"
  ],
  "author": "Abd-afeez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Itsdenty/andela-vlf-challengeissues"
  },
  "homepage": "https://github.com/Itsdenty/andela-vlf-challenge#readme",
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "jsonwebtoken": "^8.3.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "path": "^0.12.7",
    "pg": "^7.4.3",
    "swagger-jsdoc": "^3.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "supertest": "^3.1.0"
  }
}
